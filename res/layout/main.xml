<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="@dimen/app_font_size"
    >

	<LinearLayout 
	    android:orientation="horizontal" 
    	android:layout_width="match_parent"
    	android:layout_height="0dip"
    	android:layout_weight="1"
  		android:paddingTop="3dp"
   		>
   		
    	<TextView
	 		android:id="@+id/man_op_tv"
	 		android:layout_width="match_parent"
	 		android:layout_height="wrap_content"
	
	 		android:text="@string/str_manual_op"
	 		android:textSize="@dimen/large_data_text_sz"	
			/>
    
	</LinearLayout>	  
    
	<LinearLayout 
    	android:orientation="vertical" 
    	android:layout_width="wrap_content"
    	android:layout_height="0dip"
    	android:layout_weight="8"
    	
   		android:background="@drawable/myblue"
   		>
	   		
	   		
		<!-- android:background="@color/lt_blue" -->
       	<!-- android:background="@drawable/mybg" -->
         	    
         	    
	  	<ListView
	      	android:id="@+id/list_view"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:choiceMode="singleChoice"
		    android:paddingTop="2dp"
		    android:layout_margin="3dip"

			/>
	  	
		  <!-- android:descendantFocusability="blocksDescendants" 
		       android:background="@color/black"
		   -->
	   
	</LinearLayout>	   
  	 
   	<LinearLayout
    	android:orientation="horizontal" 
    	android:layout_width="match_parent"
    	android:layout_height="0dip"
		android:layout_weight="1"
		android:paddingTop="2dp"
		
   		>
	  	<!-- android:paddingTop="10dp"
			android:paddingBottom="5dp" -->
     	    
   		<Button
	       	android:id="@+id/get_button"
	     		android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:text="@string/str_get"
	   		style="@style/SLMButton"
	   		android:textSize="@dimen/medium1_data_text_sz"
	       	/>
	  	 	
	  	 	
     	   <LinearLayout
		    	android:orientation="vertical" 
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		   		> 
		   			    
		    	<TextView
		    		android:id="@+id/result_tv"
		    		android:layout_width="match_parent"
		    		android:layout_height="wrap_content"
		    		android:labelFor="@+id/command_et"
		    		android:text="@string/str_result"
		    		android:textSize="@dimen/tiny_label_text_sz"	
		  			/>
				<EditText
		  	 	    android:id="@+id/command_et"
		  	 	    android:layout_width="match_parent"
		  	 	    android:layout_height="wrap_content"
		  	 	    android:inputType="text"
		  	 	    android:text="@string/str_command"
		  	 	    android:textSize="@dimen/small_label_text_sz" 
		  	 	    />
			  	 	

			  			
			</LinearLayout>	
	  	 	

 		</LinearLayout>	
   	 	
</LinearLayout>
 
